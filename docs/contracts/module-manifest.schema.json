{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://club-os.dev/schemas/module-manifest.schema.json",
  "title": "Club OS Module Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "name",
    "version",
    "displayName",
    "description",
    "owner",
    "activation",
    "routes",
    "capabilities"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^1\\.[0-9]+$"
    },
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$"
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
    },
    "displayName": {
      "type": "string",
      "minLength": 3
    },
    "description": {
      "type": "string",
      "minLength": 10
    },
    "owner": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_.-]+$"
    },
    "activation": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "defaultEnabled",
        "configSchema"
      ],
      "properties": {
        "defaultEnabled": {
          "type": "boolean"
        },
        "configSchema": {
          "type": "string",
          "description": "URI or path to JSON schema for module-specific tenant config"
        }
      }
    },
    "routes": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "app",
          "area",
          "path",
          "visibility"
        ],
        "properties": {
          "app": {
            "type": "string",
            "enum": [
              "web",
              "api",
              "mobile"
            ]
          },
          "area": {
            "type": "string",
            "enum": [
              "public",
              "member",
              "admin",
              "shared"
            ]
          },
          "path": {
            "type": "string",
            "pattern": "^/[A-Za-z0-9/_\\-\\[\\]().:*]*$"
          },
          "visibility": {
            "type": "string",
            "enum": [
              "public",
              "authenticated",
              "management",
              "internal"
            ]
          }
        }
      }
    },
    "capabilities": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9_]*(\\.[a-z][a-z0-9_]*)+$"
      }
    },
    "dependencies": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "module",
          "version"
        ],
        "properties": {
          "module": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9-]*$"
          },
          "version": {
            "type": "string",
            "pattern": "^[~^]?(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?$"
          },
          "optional": {
            "type": "boolean",
            "default": false
          }
        }
      }
    },
    "events": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "direction",
          "version"
        ],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_.-]*$"
          },
          "direction": {
            "type": "string",
            "enum": [
              "publishes",
              "subscribes"
            ]
          },
          "version": {
            "type": "string",
            "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
          }
        }
      }
    }
  }
}
